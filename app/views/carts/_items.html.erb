<table>
  <% cart.line_items.each do |item| %>
      <tr>
        <td> <%= item.quantity %> &times;</td>
        <td> <%= item.product.name %></td>
        <td class="item_price"><%= number_to_currency(item.total_price, :unit => '&euro;') %></td>
        <td><%= button_to 'Remove', item, :method => :delete, :confirm => 'Are you sure?' %></td>
      </tr>
  <% end %>
  <tr class="total_line " >
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price, :unit => '&euro;') %></td>
  </tr>
</table>