<h1>Create User</h1>
<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@user.errors.count, "error") %>
            prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :email %>&#42<br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :user_name %>&#42<br />
      <%= f.text_field :user_name %>
    </div>
    <div class="field">
      <%= f.label :password %>&#42<br />
      <%= f.password_field :password %>
    </div>

    <p>&#42 Necessary fields</p>
    <div class="actions">
      <%= f.submit "Create User"%>
    </div>
<% end %>
<%= link_to 'Back', products_path %>